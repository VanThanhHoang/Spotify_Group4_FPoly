<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/toolbarPlayMusicFragment"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btnBack"
            style="@style/img_button_toolbar"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btnMore"
            style="@style/img_button_toolbar"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more" />
    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpgSongInfo"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/toolbarPlayMusicFragment" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/timeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/vpgSongInfo"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:defaultFocusHighlightEnabled="true"
        android:max="1000"
        android:maxHeight="5dp"
        android:progressDrawable="@drawable/br_seek_bar"
        android:thumb="@null" />

    <TextView
        android:id="@+id/tvTimeStart"
        style="@style/title_Login"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_below="@+id/timeSeekBar"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="@string/defaultDuration"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvTimeEnd"
        style="@style/title_Login"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_below="@+id/timeSeekBar"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="@string/defaultDuration"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tvTimeStart">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnPlay_Pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_image_button_cycle"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:src="@drawable/ic_play" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrev"
            style="@style/img_button_media_player"
            android:layout_toStartOf="@+id/btnPlay_Pause"
            app:icon="@drawable/ic_prev" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/img_button_media_player"
            android:layout_toEndOf="@+id/btnPlay_Pause"
            app:icon="@drawable/ic_next" />

        <com.google.android.material.button.MaterialButton
            style="@style/img_button_media_player"
            android:layout_toStartOf="@+id/btnPrev"
            app:icon="@drawable/ic_random" />

        <com.google.android.material.button.MaterialButton
            style="@style/img_button_media_player"
            android:layout_toEndOf="@+id/btnNext"
            app:icon="@drawable/ic_loop" />
    </RelativeLayout>
</RelativeLayout>