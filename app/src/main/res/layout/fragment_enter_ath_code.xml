<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvTittle"
        style="@style/title_Login"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác minh"/>
   <LinearLayout
       android:id="@+id/athCodeContainer"
       android:layout_marginTop="20dp"
       android:orientation="horizontal"
       android:weightSum="7"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <EditText
           android:id="@+id/athCode0"
           style="@style/ath_code"/>
       <EditText
           android:id="@+id/athCode2"
           style="@style/ath_code"/>
       <EditText
           android:id="@+id/athCode3"
           style="@style/ath_code"/>
       <EditText
           android:id="@+id/athCode4"
           style="@style/ath_code"/>
       <EditText
           android:id="@+id/athCode5"
           style="@style/ath_code"/>
       <EditText
           android:id="@+id/athCode6"
           style="@style/ath_code"/>
   </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        style="@style/button_login_style"
        android:layout_width="200dp"
        android:layout_margin="10dp"
        android:text="Xác minh"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvGetCodeAgain"
        android:textColor="@color/green"
        android:layout_margin="10dp"
        android:layout_width="250dp"
        style="@style/title_Login"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:text="Bạn chưa nhận được mã ?\nVui lòng chờ để yêu cầu gửi lại "/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        app:strokeWidth="0dp"
        android:layout_margin="10dp"
        android:id="@+id/btnGetAthCode"
        style="@style/button_login_style"
        android:layout_width="200dp"
        android:textColor="@color/white"
        />
</LinearLayout>