<resources>
    <!-- Base application theme. -->
    <style name="Theme.Spotify_Group4" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_back_40</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_login_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="strokeWidth">1sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title_Login">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_prefix_size">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ath_code">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:maxLength">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:inputType">number|textNoSuggestions</item>
    </style>

    <style name="textDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="customIndicator" parent="ShapeAppearance.Material3.NavigationBarView.ActiveIndicator">
        <item name="color">@color/black</item>
    </style>

    <style name="MyCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="button_register_account" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="strokeWidth">1sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="img_button_toolbar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">48dp</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="img_button_media_player">
        <item name="android:layout_weight">1.2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="tint">@color/white</item>
        <item name="iconSize">30sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="titlle_Login1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="titlle_Login2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="button_login_style2" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">25sp</item>
        <item name="strokeWidth">1sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="strokeColor">@color/coloredittext1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>